# The user-model conversation info
struct ConversationBase

    # The conversation identifier
    string id

    # The model name
    string model

    # The conversation title
    string title


# The user-model conversation generating state
struct ConversationGeneratingBase

    # If True, the latest exchange is actively generating
    bool generating


# Conversation information struct with generating state
struct ConversationInfo (ConversationBase, ConversationGeneratingBase)


# A user-model conversation
struct Conversation (ConversationBase)

    # The conversation's exchanges
    ConversationExchange[len > 0] exchanges


# A user-model conversation with generating state
struct ConversationGenerating (Conversation, ConversationGeneratingBase)


# A conversation user-model exchange
struct ConversationExchange

    # The user prompt
    string(len > 0) user

    # The model response
    string model


group "Ollama Chat JSON"


# The Ollama Chat config file format
struct OllamaChatConfig

    # The current model name
    optional string model

    # The saved conversations
    Conversation[] conversations

    # The conversation templates
    optional ConversationTemplate[len > 0] templates

    # If true, don't save the config file
    optional bool noSave


# An Ollama Chat conversation template
struct ConversationTemplate

    # The conversation title
    string title

    # The user prompts to execute in order
    string[len > 0] prompts

    # The template variables (e.g. "{{var}}")
    optional ConversationTemplateVariable[len > 0] variables


# An Ollama Chat conversation template variable
struct ConversationTemplateVariable

    # The variable name (e.g. "CityState")
    string name

    # The variable's label (e.g. "The City and State (e.g. Seattle, WA)")
    string label


group "Ollama Chat API"


# Get information for the index page
action getConversations
    urls
        GET

    output
        # The current model name
        string model

        # The available models
        string[] models

        # The conversations
        ConversationInfo[] conversations

        # The conversation template titles
        optional string[len > 0] templates


# Set the current model name
action setModel
    urls
        POST

    input
        # The model name
        string model


# Get a conversation template
action getTemplate
    urls
        GET

    query
        # The template index
        int(>= 0) index

    output (ConversationTemplate)

    errors
        UnknownTemplateIndex


# Start a conversation
action startConversation
    urls
        POST

    input
        # The user prompt
        string(len > 0) user

    output
        # The new conversation ID
        string id


# Start a conversation
action startTemplate
    urls
        POST

    input
        # The template index
        int(>= 0) index

        # The template variable values
        optional string{len > 0} variables

    output
        # The new conversation ID
        string id

    errors
        InvalidTemplateIndex
        MissingVariable
        UnknownVariable


# Stop a generating conversation
action stopConversation
    urls
        POST

    input
        # The conversation identifier
        string id

    errors
        UnknownConversationID


# Get a conversation
action getConversation
    urls
        GET

    query
        # The conversation identifier
        string id

    output
        # The conversation
        ConversationGenerating conversation

    errors
        UnknownConversationID


# Reply to a conversation
action replyConversation
    urls
        POST

    input
        # The conversation identifier
        string id

        # The user reply prompt
        string(len > 0) user

    errors
        UnknownConversationID
        ConversationBusy


# Delete a conversation
action deleteConversation
    urls
        POST

    input
        # The conversation identifier
        string id

    errors
        UnknownConversationID
        ConversationBusy


# Delete the most recent exchange of a conversation
action deleteConversationExchange
    urls
        POST

    input
        # The conversation identifier
        string id

    errors
        UnknownConversationID
        ConversationBusy


# Regnerate the model's response of the most recent exchange of a conversation
action regenerateConversationExchange
    urls
        POST

    input
        # The conversation identifier
        string id

    errors
        UnknownConversationID
        ConversationBusy
